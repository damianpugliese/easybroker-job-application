{
  "compilerOptions": {
    "lib": ["ES6"],
    "outDir": "./build",
    "removeComments": true,
    "allowJs": true,
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "jest.config.js",
    "build",
    "babel.config.js"
  ]
}